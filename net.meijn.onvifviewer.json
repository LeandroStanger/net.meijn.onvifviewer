{
    "app-id": "net.meijn.onvifviewer",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "onvifviewer",
    "finish-args": [
        "--socket=x11",
        "--device=dri",
        "--share=ipc",
        "--share=network"
    ],
    "modules": [
        {
            "name": "kdsoap",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/caspermeijn/KDSoap.git",
                    "branch": "master",
                    "commit": "5fadb5eb393ed8aa234290a2001dbe92915907fb"
                }
            ]
        },
        {
            "name": "onvifviewer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/caspermeijn/onvifviewer.git",
                    "tag": "v0.5",
                    "commit": "07064ee340904d65fd5e5eb3c25b73c8fea28389"
                },
                {
                    "type": "git",
                    "url": "https://github.com/KDE/breeze-icons.git",
                    "tag": "v5.48.0",
                    "commit": "576471de8ad6c14ddc9419c9be39c6a3b7b8f3ca",
                    "dest": "3rdparty/breeze-icons"
                }
            ]
        }
    ],
    "cleanup": [
        "/include",
        "/lib/debug",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/mkspecs",
        "/lib/libkdsoap-server.so*",
        "/share/doc"
    ]
}
